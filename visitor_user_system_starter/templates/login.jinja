{% extends "layout.jinja" %}

{% block content %}
<div class="container">
    <div class="title">Please Login</div>
</div> 
<form name="login" method="post" class="form">
    <div class="form-group">
        {{ form.hidden_tag() }}

        {{ form.email.label(class_="form-label") }}
        {{ form.email(class_="form-field") }}
    </div>
    <div class="form-group">
        {{ form.password.label(class_="form-label") }}
        {{ form.password(class_="form-field") }}
    </div>
    <div class="form-group-button">
        {{ form.submit(class_="form-button") }}
    </div>
    <div class="container">
        <a href="{{ url_for('pages.register') }}" class="register-link">Register Here</a>
    </div>
</form>
{% endblock %}

