{% extends "layout.jinja" %}

{% block content %}
<div class="container">
    <div class="title">Logic Gate Simulator</div>
</div> 
<form name="logic_gate" method="post" class="form">
    <div class="logic-container">
        <div class="form-group">
            {{ form.hidden_tag() }}
            {% if left %}
                {{ form.left(class_="form-button-true") }}
            {% else %}
                {{ form.left(class_="form-button-false") }}
            {% endif %}
        </div>
        <div class="form-group">        
            {{ form.operator.label(class_="form-label") }}
            {{ form.operator(class_="form-field") }}
        </div>
        <div class="form-group">
            {% if right %}
                {{ form.right(class_="form-button-true") }}
            {% else %}
                {{ form.right(class_="form-button-false") }}
            {% endif %}
        </div>
    </div>    
    <div class="default-container">
        {% if result%}
            <div class="logic-result-true" id="logic-result">
                True
            </div>
        {% else %}
            <div class="logic-result-false" id="logic-result">
                False
            </div>
        {% endif %}
    </div>
</form>
{% endblock %}

